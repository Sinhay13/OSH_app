<h1>Reminds</h1>

<div name="reminds-buttons" class="reminds-buttons">
	<button name="current-reminds">Current</button>
	<button name="pinned-reminds">Pinned</button>
	<button name="all-reminds">All</button>
</div>

<form name="current-pinned">
	<br>
	<h3>Current or pinned reminds :</h3>
	<table>
		<thead>
			<tr>
				<th>Tag</th>
				<th>Message-id</th>
				<th>Title</th>
				<th>Date-remind</th>
				<th>Repeat</th>
				<th>Read</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="tag"></td>
				<td><input type="text" name="message-id"></td>
				<td><input type="text" name="title"></td>
				<td><input type="text" name="date-remind"></td>
				<td><input type="text" name="repeat-remind"></td>
				<td><button name="read-remind">Read</button></td>
			</tr>
		</tbody>
	</table>
</form>
<form name="all">
	<br>
	<h3> All reminds :</h3>
	<table>
		<thead>
			<tr>
				<th>Tag</th>
				<th>Message-id</th>
				<th>Title</th>
				<th>Date-remind</th>
				<th>Repeat</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="tag"></td>
				<td><input type="text" name="message-id"></td>
				<td><input type="text" name="title"></td>
				<td><input type="text" name="date-remind"></td>
				<td><input type="text" name="repeat"></td>
				<td><button name="edit-remind">Edit</button></td>
				<td><button name="delete-remind">Delete</button></td>
			</tr>
		</tbody>
	</table>
</form>
<form name="edit">
	<br>
	<fieldset style="display: flex; flex-direction: column; gap: 10px; width: 200px;">
		<br>
		<legend>Edit remind</legend>

		<label for="title">Title</label>
		<input type="text" name="title" style="width: 200px;">

		<label for="message-id">Message-id</label>
		<input type="text" name="message-id" style="width: 200px;">

		<label for="date-remind">Date-remind</label>
		<input type="date" name="date-remind" style="width: 200px;">

		<label for="repeat">Repeat</label>
		<select name="repeat" style="width: 200px;">
			<option value="unique">Unique</option>
			<option value="pin">Pin</option>
			<option value="daily">Daily</option>
			<option value="weekly">Weekly</option>
			<option value="monthly">Monthly</option>
			<option value="yearly">Yearly</option>
		</select>

		<button name="save-edit">Save</button>
	</fieldset>
</form>
<form name="read">
	<br>
	<h3>Message :</h3>
	<p name="data"></p>
	<textarea id="markdown"></textarea>
	<input type="submit" name="valid-message" value="Sign">
	<p class="right">SO</p>
</form>
<script src="js/reminds.js" defer></script>