<h1>Tags</h1>
<p name="count-tags"></p>

<form name="status-tags">
	<h3>Status : </h3>
	<table>
		<thead>
			<tr>
				<th>Tags enabled</th>
				<th>Tags disabled</th>
				<th>All</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><button type="button" name="enabled-tags-button">Next</button></td>
				<td><button type="button" name="disabled-tags-button">Next</button></td>
				<td><button type="button" name="all-tags-button">Next</button></td>
			</tr>
		</tbody>
	</table>
</form>

<form name="disabled-tags">
	<h3>List of disabled Tags : </h3>
	<div name="return-button">
		<button type="button" name="return">Return</button>
	</div>
	<br>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Created</th>
				<th>Updated</th>
				<th>Messages</th>
				<th>Comments</th>
				<th>Actions</th>

			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="name-disabled-tag"></td>
				<td><input type="text" name="created-disabled-tag"></td>
				<td><input type="text" name="updated-disabled-tag"></td>
				<td><button type="button" name="see-messages-list-disabled-tag">Messages</button></td>
				<td><button type="button" name="see-comment-disabled">Comment</button></td>
				<td>
					<button type="button" name="active-tag">active</button>
				</td>
			</tr>
		</tbody>
	</table>
</form>

<form name="enabled-tags-filters">
	<h3>Filters of enabled Tags:</h3>
	<div name="return-button">
		<button type="button" name="return">Return</button>
	</div>
	<br>
	<table>
		<thead>
			<tr>
				<th>is-system</th>
				<th>is-principle</th>
				<th>principle</th>
				<th>action</th>

			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<select name="is-system-filter">
						<option value="all">all</option>
						<option value="yes">yes</option>
						<option value="no">no</option>
					</select>
				</td>
				<td>
					<select name="is-principle-filter">
						<option value="all">all</option>
						<option value="yes">yes</option>
						<option value="no">no</option>
					</select>
				</td>
				<td>
					<select name="principle-filter">
						<option value="all">all</option>
						<option value="none">none</option>
					</select>
				</td>
				<td><button type="button" name="apply-filters-tags">next</button></td>
			</tr>
		</tbody>
	</table>
</form>

<form name="enabled-tags">
	<h3>Enabled Tags List : </h3>
	<p name="current-enabled-filter"></p>
	<div name="return-button">
		<button type="button" name="back-to-filter">Filters</button>
	</div>
	<br>
	<div class="table-container">
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>is-system</th>
					<th>is-principle</th>
					<th>principle</th>
					<th>Created</th>
					<th>Updated</th>
					<th>Messages</th>
					<th>Comments</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><input type="text" name="name-enabled-tag"></td>
					<td>
						<select name="is-system">
							<option value="no">No</option>
							<option value="yes">Yes</option>
						</select>
					</td>
					<td>
						<select name="is-principle">
							<option value="no">No</option>
							<option value="yes">Yes</option>
						</select>
					</td>
					<td>
						<select name="principle">
							<option value="none">null</option>
						</select>
					</td>
					<td><input type="text" name="created-enabled-tag"></td>
					<td><input type="text" name="updated-enabled-tag"></td>
					<td><button type="button" name="see-messages-list-enabled-tag">Messages</button></td>
					<td><button type="button" name="see-comments-enabled-tag">Comment</button></td>
					<td>
						<button type="button" name="enabled-tag-update">Update</button>
						<button type="button" name="disable-tag">Disable</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</form>

<form name="full-tags">

	<h3>Tags list: </h3>
	<div name="return-button">
		<button type="button" name="return">Return</button>
	</div>
	<br>
	<table>
		<thead>
			<tr>
				<th>Tag Name</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="tag-name-input"></td>
			</tr>
		</tbody>
	</table>
	<p><strong>Result :</strong></p>
	<ul name="list-tag-result"></ul>

</form>

<form name="message-list">
	<h3> Messages Found : </h3>
	<p name="tag-name-message-list"></p>
	<div name="return-button">
		<button type="button" name="return">Return</button>
	</div>
	<br>

	<table>
		<thead>
			<tr>
				<th>Entry-id</th>
				<th>Chapter</th>
				<th>City</th>
				<th>Country</th>
				<th>Date</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="message-id"></td>
				<td><input type="text" name="message-chapter"></td>
				<td><input type="text" name="message-city"></td>
				<td><input type="text" name="message-country"></td>
				<td><input type="text" name="message-date"></td>
				<td><button type="button" name="message-read">Read</button></td>
			</tr>
		</tbody>
	</table>
	<input type="submit" name="message-list-back" value="Back">
	<input type="submit" name="message-list-first" value="First">
	<input type="submit" name="message-list-next" value="Next">
</form>

<form name="message-comment-form">
	<h3 name="header-message-comment"></h3>
	<p name="paragraph-message-comment"></p>
	<textarea id="markdown"></textarea>
	<div class="button-container">
		<button type="button" name="message-previous">Previous</button>
		<button type="button" name="message-next">Next</button>
	</div>
	<input type="submit" name="comment-save" value="Save">
	<input type="submit" name="message-close" value="Close">
	<p class="right">.SO</p>
</form>


<script src="js/tags.js" defer></script>