<h1>New Entry</h1>

<form name="tag-form">
	<h3>Tag selection : </h3>
	<table>
		<thead>
			<tr>
				<th>Tag</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<select name="tag-list"></select>
				</td>
			</tr>
		</tbody>
	</table>
	<input type="submit" name='valid-tag' value="next">
</form>
<br>
<form name="city-country-form">
	<h3> Where ? </h3>
	<table>
		<thead>
			<tr>
				<th>City</th>
				<th>Country</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="city"></td>
				<td><input type="text" name="country"></td>
			</tr>
		</tbody>
	</table>
	<input type="submit" name='valid-city-country' value="next">
</form>
<br>
<form name="message-form">
	<h3>Message : </h3>
	<div id="editorjs">
		<textarea id="editor-content" style="display:none;"></textarea>
	</div>
	<button type="button" name="clear-text">Read done</button>
	<input type="submit" name="valid-message" value="submit">
</form>
<br>
<form name="date-form">
	<h3>Time and sending : </h3>
	<table>
		<thead>
			<tr>
				<th>date</th>
				<th>now</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input type="text" name="message-date"></td>
				<td><input type="button" name="time-now" value="time-now"></td>
			</tr>
		</tbody>
	</table>
	<input type="submit" name="send-message" value="send">
</form>
<script src="js/new-entry.js" defer></script>